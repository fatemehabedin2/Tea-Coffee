<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./css/form.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <title>Product creation</title>
  </head>
  <body>
 {{>admin-header}}
    <br />
    <div class="container create-form">

      <form>
        <fieldset>
          <legend>Product Creation</legend>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="product-name" class="form-label">Product name</label> }}
              <input
                type="text"
                class="form-control"
                id="product-name"
                placeholder="Product name"
                name="product-name"
                required
              />
            </div>
            <div class="invalid-feedback">
              Please enter product name.
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="description" class="form-label">Product description</label> }}
              <textarea
                class="form-control"
                id="description"
                rows="2"
                placeholder="Product description"
                name="description"
                required
              ></textarea>
            </div>
            <div class="invalid-feedback">
              Please enter product description.
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="unit_price" class="form-label">Product price</label> }}
              <input
                type="text"
                class="form-control"
                id="unit_price"
                placeholder="Product price"
                name="unit_price"
                required
              />
            </div>
            <div class="invalid-feedback">
              Please enter product price.
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="quantity" class="form-label">Quantity in stock</label> }}
              <input
                type="number"
                min="0"
                class="form-control"
                id="quantity"
                name="quantity"
                placeholder="Product quantity"
                required
              />
            </div>
            <div class="invalid-feedback">
              Please enter product quantity.
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="category" class="form-label">Product category</label> }}
              <select
                class="form-select"
                aria-label="Product category"
                id="category"
                name="category"
                required
              >
                <option selected>Product category</option>
                <option value="1">Green Tea</option>
                <option value="2">Black Tea</option>
                <option value="3">Herbal Tea</option>
                <option value="4">Instant Coffee</option>
                <option value="5">Ground Coffee</option>
              </select>
            </div>
            <div class="invalid-feedback">
              Please choose product category.
            </div>
          </div>
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="discount" class="form-label">Discount percentage</label> }}
              <input
                type="text"
                class="form-control"
                id="discount"
                name="discount"
                placeholder="Discount percentage"
              />
            </div>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="bestseller"
            />
            <label class="form-check-label" for="bestseller">
              Bestseller
            </label>
          </div>
          <br />
          <div class="form-group">
            <div class="mb-3">
              {{! <label for="image" class="form-label">Product Image</label> }}
              <h6>Upload product image</h6>
              <input class="form-control-file" type="file" id="image" />
            </div>
          </div>

          <br />
          <div class="form-group btn-form">
            <button type="reset" class="btn btn-primary in-forms">CLEAR</button>
            <button
              type="submit"
              class="btn btn-primary in-forms"
            >CREATE</button>

          </div>
        </fieldset>
      </form>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

  </body>
</html>