<html lang="en">

<head>
  {{>headMetaTags}}
  <link rel="stylesheet" href="./css/authenticatedUser.css" />
  <title>Dashboard User</title>
</head>

<body>
  {{>user-header}}
  <section id="hero-section-2">
    <div class="container">
      <br /><br /><br /><br /><br /><br /><br /><br />
      <h4>
        Hello Cherry<br />
        Enjoy our products
      </h4>
    </div>
  </section>
  {{!-- Top Tea Products --}}
  <div class="container">
    <h4 class="mt-5">Top Tea Products</h4>
    <div class="row p-5">
       {{#each data1}}
      <div class="col ">
        <div class="card text-center">
          <img class="card-img-top" src={{image}} alt="product" height="270">
          <div class="card-body">
            <h5 class="card-title">{{product_name}}</h5>
            <p class="card-text product-price">{{unit_price}}</p>
            <a href="/products/{{product_id}}" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  {{!-- Top Coffee Products --}}
  <div class="container">
    <h4>Top Coffee Products</h4>
    <div class="row p-5">
      {{#each data2}}
      <div class="col ">
        <div class="card text-center">
          <img class="card-img-top" src={{image}} alt="product" height="270">
          <div class="card-body">
            <h5 class="card-title">{{product_name}}</h5>
            <p class="card-text">{{description}}</p>
            <p class="card-text product-price">{{unit_price}}</p>
            <a href="/products/{{product_id}}" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <div class="container">
    <br />
    <div class="row justify-content-md-center">
      <div class="col payment">
        <img src="images/visa.png" alt="visa" width="150px" height="80px">
      </div>
      <div class="col payment">
        <img src="images/master.jpg" alt="master" width="170px" height="80px">
      </div>
      <div class="col payment">
        <img src="images/paypal.jpg" alt="paypal" width="170px" height="70px">
      </div>
      <div class="col payment">
        <img src="images/american-express.png" alt="american-express" width="150px" height="70px">
      </div>
    </div>
  </div>
  <br />

  {{!-- footer --}}
  {{>footer}}

  {{!-- scripts --}}
  {{>footerScripts}}
</body>

</html>